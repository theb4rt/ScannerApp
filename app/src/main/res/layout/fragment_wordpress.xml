<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/chkbox3"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:layout_marginEnd="50dp"
            android:text="Enumerate Themes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chkbox2" />

        <CheckBox
            android:id="@+id/chkbox4"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:layout_marginEnd="50dp"
            android:text="Enumerate Plugins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chkbox3" />

        <CheckBox
            android:id="@+id/chkbox5"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:layout_marginEnd="50dp"
            android:text="VulnPlugins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chkbox4" />

        <CheckBox
            android:id="@+id/chkbox6"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:layout_marginEnd="50dp"
            android:text="VulnThemes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chkbox5" />

        <CheckBox
            android:id="@+id/chkbox2"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:layout_marginEnd="50dp"
            android:text="Enumerate Users"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chkbox1" />

        <Button
            android:id="@+id/btn_wordpress_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="Launch Attack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chkbox6" />

        <TextView
            android:id="@+id/txt_tittle_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Please Insert an Website To Scan:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.233"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTemplateWeb" />

        <TextView
            android:id="@+id/textViewTemplateWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Select Template :"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.245"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txt_wp_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Website"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_tittle_website" />

        <TextView
            android:id="@+id/txt_output_web_Scan"
            android:layout_width="319dp"
            android:layout_height="246dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:text="Resultados"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_wordpress_scan" />

        <CheckBox
            android:id="@+id/chkbox1"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="50dp"
            android:text="AgressiveScan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_wp_scan" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>